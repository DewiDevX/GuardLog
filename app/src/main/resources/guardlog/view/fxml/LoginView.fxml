<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="guardlog.controller.LoginController"> <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Aplikasi Keamanan">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <Label text="Login Petugas">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="usernameField" promptText="Username" maxWidth="250.0" />
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250.0" />
    <TextField fx:id="officerNameField" promptText="Nama Lengkap Petugas" maxWidth="250.0" />
    <Button onAction="#handleLoginButtonAction" text="Login" />
</VBox>