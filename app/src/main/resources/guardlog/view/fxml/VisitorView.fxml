<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.Region?>

<VBox alignment="TOP_LEFT" spacing="20.0" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guardlog.controller.VisitorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Manajemen Pengunjung">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleBackToDashboard" text="Kembali ke Dashboard" />
    </HBox>
    <Separator />

    <VBox spacing="10.0">
        <Label text="Registrasi Pengunjung Masuk:" style="-fx-font-weight: bold;" />
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="visitorNameField" promptText="Nama Pengunjung" prefWidth="250.0" />
            <TextField fx:id="visitorPurposeField" promptText="Tujuan Kunjungan" prefWidth="300.0" />
            <Button onAction="#handleRegisterVisitor" text="Daftar Pengunjung" />
        </HBox>
    </VBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <Label text="Riwayat Kunjungan:" style="-fx-font-weight: bold;" />
        <TableView fx:id="visitorTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nama Pengunjung" />
                <TableColumn fx:id="purposeColumn" prefWidth="200.0" text="Tujuan Kunjungan" />
                <TableColumn fx:id="officerColumn" prefWidth="120.0" text="Petugas Pencatat" />
                <TableColumn fx:id="timeInColumn" prefWidth="150.0" text="Jam Masuk" />
                <TableColumn fx:id="timeOutColumn" prefWidth="150.0" text="Jam Keluar" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button onAction="#handleCheckoutVisitor" text="Checkout Pengunjung Terpilih" />
        </HBox>
    </VBox>
</VBox>