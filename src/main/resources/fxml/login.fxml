<?xmlns="http://javafx.com/javafx/21"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guardlog.controllers.LoginController">
    <padding><Insets top="40" bottom="40" left="50" right="50"/></padding>

    <Label text="GUARDLOG" style="-fx-font-size: 24px; -fx-text-fill: #2c7cf1;" />
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Hyperlink text="Forgot Password?" />
</VBox>
